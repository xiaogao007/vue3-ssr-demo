{
  "name": "vue3-ssr-demo",
  "version": "1.0.0",
  "description": "Vue3 SSR 简版项目，使用 Node BFF 实现服务端渲染",
  "author": "小高",
  "license": "MIT",
  "keywords": ["vue3", "ssr", "server-side-rendering", "node", "bff", "vite"],
  "repository": {
    "type": "git",
    "url": "https://github.com/xiaogao/vue3-ssr-demo"
  },
  "type": "module",
  "scripts": {
    "dev": "node server.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --outDir dist/server --ssr src/entry-server.js",
    "serve": "cross-env NODE_ENV=production node server.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pinia": "^2.1.7",
    "vue": "^3.4.0",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.2",
    "cross-env": "^7.0.3",
    "vite": "^5.0.10"
  }
}

